@{
    ViewBag.Title = "actualizar";
   
}
    
@ViewBag.idee
@model proyecto.Models.PerfilModels

@{
    ViewBag.Title = "Registrar Informacion de Usuario";
}
<h2 id="ps">Registrar Informacion de Usuario </h2>



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<form enctype="multipart/form-data" method="post" action="@Url.Action("perfil")">
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
    @foreach (var actu in ViewBag.act)
    {
        string imagen = "../imagenes/" + @actu.avatar;
        <fieldset id="registrarr1">
            <legend id="hhh">Registrar Datos aqui</legend>

            <div class="editor-label">  
                @Html.LabelFor(m => m.nombre)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.nombre, new { @Value = @actu.nombre})
                @Html.ValidationMessageFor(m => m.nombre)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.apellido)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.apellido, new { @Value = @actu.apellido})
                @Html.ValidationMessageFor(m => m.apellido)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.pais )
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.pais, new { @Value = @actu.pais})
                @Html.ValidationMessageFor(m => m.pais)
            </div><br/>
            <img src="@imagen" width="50px" height="60px" alt="por si no da"/>
             <div class="editor-label">
                @Html.LabelFor(m => m.avatar)
            </div>

             <div class="editor-field">
             <input type="file" name="avatar"/>

            </div>
            <p>
                <input type="submit" value="Guardar cambios" />
            </p>
            

        </fieldset>
    }

    </div>
</form>
